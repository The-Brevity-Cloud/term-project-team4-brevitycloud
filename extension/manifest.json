{
    "manifest_version": 3,
    "name": "AI Web Summarizer",
    "version": "1.0",
    "description": "Summarize web pages using AI",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*.execute-api.us-east-1.amazonaws.com/",
        "https://mzu4l0fkgh.execute-api.us-east-1.amazonaws.com/"
    ],
    "externally_connectable": {
        "matches": [
            "https://*.execute-api.us-east-1.amazonaws.com/*",
            "https://mzu4l0fkgh.execute-api.us-east-1.amazonaws.com/*",
            "https://*.chromiumapp.org/*"
        ]
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/icons/icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.execute-api.us-east-1.amazonaws.com https://mzu4l0fkgh.execute-api.us-east-1.amazonaws.com"
    }
}