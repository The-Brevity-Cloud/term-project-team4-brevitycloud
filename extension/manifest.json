{
    "manifest_version": 3,
    "name": "AI Web Summarizer",
    "version": "0.1",
    "description": "AI-powered summarization for web content",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "sidePanel"
    ],
    "host_permissions": [
        "https://*.execute-api.us-east-1.amazonaws.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/icons/icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    }
}